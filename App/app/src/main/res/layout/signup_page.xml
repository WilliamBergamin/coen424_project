<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingTop="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:id="@+id/drawer_layout"
    android:background="#FFFFFF"
    tools:context=".Signup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/createanaccount"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textAlignment="textStart"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Create an account"
            android:background="#FFFFFF"
            android:elevation="0dp"
            android:textColor="@color/colorHotPink"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="91dp"
            android:background="#FFFFFF"
            android:elevation="0dp"
            android:text="Name"
            android:textColor="@color/colorHotPink"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorHotPink"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz -_1234567890@./"
            android:inputType="text"
            android:maxLength="20"
            android:singleLine="true"
            android:textAlignment="center"
            android:textCursorDrawable="@null"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="198dp"
            android:background="#FFFFFF"
            android:elevation="0dp"
            android:text="Email"
            android:textColor="@color/colorHotPink"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="300dp"
            android:layout_height="46dp"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorHotPink"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz -_1234567890@."
            android:inputType="text"
            android:maxLength="20"
            android:singleLine="true"
            android:textAlignment="center"
            android:textCursorDrawable="@null"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/passwordInput"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:elevation="0dp"
            android:text="Password"
            android:textColor="@color/colorHotPink"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="164dp"
            android:backgroundTint="@color/colorHotPink"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz -_1234567890@."
            android:inputType="text"
            android:maxLength="20"
            android:singleLine="true"
            android:textAlignment="center"
            android:textCursorDrawable="@null"
            android:textSize="16dp" />

        <Button
            android:id="@+id/signupButton"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_above="@+id/alreadyhaveanaccount"
            android:layout_centerHorizontal="true"
            android:background="@color/colorHotPink"
            android:elevation="0dp"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/alreadyhaveanaccount"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/createanaccount"
            android:layout_marginBottom="36dp"
            android:background="#FFFFFF"
            android:elevation="0dp"
            android:text="Already have an account?"
            android:textColor="@color/colorDarkGrey"
            android:textSize="16dp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="75dp"
            android:layout_height="26dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="38dp"
            android:layout_toEndOf="@+id/alreadyhaveanaccount"
            android:background="#FFFFFF"
            android:elevation="0dp"
            android:text="Log In!"
            android:textColor="@color/colorHotPink"
            android:textSize="16dp" />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>